	<bean id="m2" class="com.kitri.ditest.MemberDto">
	<!-- Attribute value는 값을 String으로 인식한다.
		고로 type으로 자료형을 명시해줘야한다. -->
		<constructor-arg value="노정탁"/>		
		<constructor-arg value="28" type="int"/>		
	</bean>
	
	<bean id="m3" class="com.kitri.ditest.MemberDto">
